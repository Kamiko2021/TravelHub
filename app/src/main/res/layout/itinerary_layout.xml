<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_color" >

    <TextView
        android:id="@+id/travel_plan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:text="Itinerary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />
    <LinearLayout
        android:id="@+id/date_container"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/travel_plan_text">

        <!-- Trip Schedule Text -->
        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="@string/trip_schedule"
            android:layout_marginEnd="8dp" />

        <!-- Select Date Text with Icon -->
        <TextView
            android:id="@+id/selectDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Select date "
            android:layout_marginTop="3dp"
            android:drawableRight="@drawable/calendar" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/first_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/background_color"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/date_container"
        tools:ignore="MissingConstraints">

        <!-- Main LinearLayout set to vertical to stack items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
        <LinearLayout
            android:id="@+id/day_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/day_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="Day"
                android:layout_gravity="start" />
            <TextView
                android:id="@+id/num_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text=" 1"
                android:layout_gravity="start"
                android:layout_marginEnd="10dp" />
        </LinearLayout>

            <!-- Location Logo and Starting Point Spinner -->
            <LinearLayout
                android:id="@+id/loc_container"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginStart="30dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/loc_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/location2"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical" />

                <Spinner
                    android:id="@+id/select_start_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:hint="@string/starting_point"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dep_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="60dp"
                android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:text="Departure: "
                android:layout_marginEnd="10dp" />
                <TextView
                    android:id="@+id/departure_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:text="1 pm"
                    android:textStyle="bold" />

        </LinearLayout>
            <TextView
                android:id="@+id/transpo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="60dp"
                android:layout_gravity="center_vertical"
                android:text="Transportation: Private car, shared van, or public bus "
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/departure" />
            <TextView
                android:id="@+id/est_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="60dp"
                android:layout_gravity="center_vertical"
                android:text="Estimated Travel Time: 3-5 hours "
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/transpo" />
        <!-- Home Logo and Accommodation Text, aligned below loc_container -->

            <LinearLayout
                android:id="@+id/acco_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/home_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/hotel"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/arrival_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:text="Arrival in Moalboal"
                    android:layout_marginEnd="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/accomodation_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="60dp"
                android:layout_gravity="center_vertical"
                android:text="Check into Accomodation "
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/transpo" />

            <!-- Main LinearLayout set to vertical to stack items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Location Logo and Starting Point Spinner -->
                <LinearLayout
                    android:id="@+id/lunch_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/lunch_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/lunch"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/lunch_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:text="Lunch" />
                </LinearLayout>

                <TextView
                    android:id="@+id/local_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginStart="60dp"
                    android:layout_gravity="center_vertical"
                    android:text="Nearby Local Restaurant"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@id/transpo" />
                <!-- Home Logo and Accommodation Text, aligned below loc_container -->

                <LinearLayout
                    android:id="@+id/destination_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/destination_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/destination"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/destination_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:text=" Destination" />
                    <TextView
                        android:id="@+id/destination_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:text=" 1:" />
                    <TextView
                        android:id="@+id/destination_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:text=" Pescador Island" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/start_time_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="60dp"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/start_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:text="Start time: "
                        android:layout_marginEnd="10dp" />
                    <TextView
                        android:id="@+id/start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:text="1 pm"
                        android:textStyle="bold" />

                </LinearLayout>
                <TextView
                    android:id="@+id/activities_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginStart="60dp"
                    android:layout_gravity="center_vertical"
                    android:text="Activities: "
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/start_time_container"  />

                <TextView
                    android:id="@+id/activities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginStart="60dp"
                    android:layout_gravity="center_vertical"
                    android:text="List of activities and its details and optional activities "
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@id/start_time_container"  />
                <TextView
                    android:id="@+id/duration_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginStart="60dp"
                    android:layout_gravity="center_vertical"
                    android:text="duration: 2-3 hours "
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/start_time_container"  />
            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>







</androidx.constraintlayout.widget.ConstraintLayout>